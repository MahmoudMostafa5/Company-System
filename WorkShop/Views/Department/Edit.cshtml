@model BLL.Models.DepartmentVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<h1>Edit</h1>

<br /><br />
<a asp-controller="Department" asp-action="Index" class="btn btn-info">Back To Department</a>
<a asp-controller="Department" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-warning">Delete</a>
<br /><br />

<form asp-controller="Department" asp-action="Edit" class="form-group">
        
    <input type="hidden" asp-for="Id" />

    <br /><br />


    <label asp-for="Name">Department Name</label>
    <input type="text" class="form-control" asp-for="Name" /><br />
    <span asp-validation-for="Name" class="text-danger"></span>

    <br /><br />

    <label asp-for="Code">Department Code</label>
    <input type="text" class="form-control" asp-for="Code" /><br />
    <span asp-validation-for="Code" class="text-danger"></span><br />

    <center>
        <input type="submit" value="Edit" class="btn btn-info btn-lg" />
    </center>

</form>

@section MyValidation{
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
